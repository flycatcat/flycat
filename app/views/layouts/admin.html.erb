<!DOCTYPE html>
<html>
  <head>
    <title>FlyCat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('logo.png') %>
    <script defer="" src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
  </head>
  
  <body>
    <div x-data="{ sidebarOpen: false }" class="flex h-screen max-h-screen min-h-screen bg-gray-200">
      <%= render partial: 'home/sidebar' %>
      <div class="flex flex-col flex-1 max-h-screen min-h-screen overflow-auto">
        <%= render partial: 'home/header' %>
        <div class="w-full">
          <%= render 'layouts/flash' if flash %>
        </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
