<div class="modal fade fixed top-0 left-0  w-full h-full outline-none overflow-x-hidden overflow-y-auto bg-opacity-50 bg-black" id="bulletin_show" tabindex="-1" data-controller="modal">
  <div class="modal-dialog modal-dialog-centered relative w-auto pointer-events-none h-full opacity-100">
    <div class="border-none shadow-lg absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 flex flex-col w-1/2 pointer-events-auto bg-white rounded-md outline-none text-current mx-auto my-auto">
      <div class="modal-header flex flex-shrink-0 items-center justify-between p-4 border-b border-gray-200 rounded-t-md">
        <h5 class="text-xl font-medium leading-normal text-gray-800" id="exampleModalScrollableLabel">
          <%= bulletin.title %>
        </h5>
        <button type="button"
          class="btn-close box-content w-4 h-4 p-1 text-black border-none rounded-none opacity-50 focus:shadow-none focus:outline-none focus:opacity-100 hover:text-black hover:opacity-75 hover:no-underline"
        ></button>
      </div>
      <div class="modal-body relative p-4 ">
        <article class="markdown" data-controller="markdown-viewer">
          <%= bulletin.content %>
        </article>
      </div>
      <div
        class="modal-footer flex flex-shrink-0 flex-wrap items-center justify-end p-4 border-t border-gray-200 rounded-b-md">
        <button type="button"
          class="inline-block px-6 py-2.5 bg-purple-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out" data-action="click->modal#close">
          Close
        </button>
      </div>
    </div>
  </div>
</div>


