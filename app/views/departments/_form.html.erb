<div class="fixed top-0 left-0 w-full h-full overflow-x-hidden overflow-y-auto bg-black bg-opacity-50 outline-none modal fade" tabindex="-1" data-controller="modal">
  <div class="relative w-auto h-full overflow-auto opacity-100 pointer-events-none modal-dialog modal-dialog-centered">
    <div class="absolute flex flex-col m-auto text-current transform -translate-x-1/2 -translate-y-1/2 bg-white border-none rounded-md shadow-lg outline-none pointer-events-auto top-1/2 left-1/2 max-w-min md:w-1/2 xl:max-w-xl ">
      <%= form_with(model: department) do |form| %>  
      <div class="px-10 pt-2 bg-white shadow-md sm:w-screen md:max-w-full rounded-xl whitespace-nowrap">
          <h1 class="pb-3 mt-8 font-bold text-left text-gray-500 "><%= t('部門詳情') %></h1>
          <div class="mb-5 field">
            <%= form.label :department_name, t("部門名稱"),class: "mb-1 font-semibold text-gray-600 pt-3" %>
            <%= form.text_field :department_name,class:"p-1 sm:p-3 mt-4 leading-none text-gray-900 bg-gray-100 border border-gray-200 rounded focus:outline-none focus:border-blue-700" %>
          </div>
          
          <div class="flex justify-end py-2 border-t-2 actions">
            <%= link_to t('取消'), departments_path, class: "py-2 px-6 mt-4 text-lg tracking-wide text-gray-700 text-bold rounded-md bg-gray-300  mr-6" %>
            <%= form.submit t('新增部門'), class: "py-2 px-6 mt-4 text-lg tracking-wide text-indigo-100 cursor-pointer rounded-md bg-gradient-to-tr from-blue-600 to-indigo-600 "%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>