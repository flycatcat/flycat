<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <%= form_with(model: @punchcard_setting, url: punchcard_setting_path, method: 'post') do |f| %>
    </br>
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">
  <h1 class="pb-3 font-bold text-center text-gray-500"><%= t('打卡設定') %></h1>
    </br>
    <div class="field">
      <%= f.label :company_address,class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.text_field :company_address, autofocus: true, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= f.label :latitude,class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.number_field :latitude,step: :any, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= f.label :longitude,class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.number_field :longitude,step: :any, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= f.label :allow_distance,class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.number_field :allow_distance, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="actions">
      <%= f.submit t("sign_up"),class: "w-full mt-5 bg-indigo-600 text-white py-2 rounded-md font-semibold tracking-tight" %>
    </div>
</div>
  <% end %>
