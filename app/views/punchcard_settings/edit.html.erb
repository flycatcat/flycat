<div class="flex items-start justify-center w-full h-screen pt-6 bg-gray-200">
  <%= form_with(model: @punchcard_setting, url: punchcard_setting_path, method: 'patch') do |f| %>
    </br>
  <div class="w-screen max-w-sm px-8 py-8 bg-white shadow-md rounded-xl">
  <h1 class="pb-3 font-bold text-center text-gray-500"><%= t('打卡設定') %></h1>
    </br>
    <div class="pb-4 field">
      <%= f.label :company_address, "公司地址",class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.text_field :company_address,readonly: :true, autofocus: true, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>
    <div class="flex">
      <div class="pb-6 mr-2 field">
        <%= f.label :latitude,"緯度",class: "block mb-1 font-semibold text-gray-600" %>
        <%= f.number_field :latitude,step: :any,readonly: :true, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
      </div>
      <div class="pb-6 ml-2 field">
        <%= f.label :longitude,"經度",class: "block mb-1 font-semibold text-gray-600" %>
        <%= f.number_field :longitude, readonly: :true,step: :any, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
      </div>
    </div>

    <div class="pb-6 field">
      <%= f.label :allow_distance,"允許打卡範圍 (公尺)",class: "block mb-1 font-semibold text-gray-600" %>
      <%= f.number_field :allow_distance,min:1,max:999999999, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
      <p class="pt-3 text-sm font-bold text-blue-600">GPS皆會有誤差，建議可將打卡範圍設置在 50 公尺以上</p>
    </div>

    <div class="actions">
      <%= f.submit "更新設定",class: "w-full mt-5 bg-indigo-600 text-white py-2 rounded-md font-semibold tracking-tight" %>
    </div>
</div>
  <% end %>
