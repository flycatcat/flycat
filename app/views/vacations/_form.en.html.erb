<div class="flex items-start justify-center w-full h-screen bg-gray-200">
  <%= form_with(model: vacation) do |form| %>  
    <div class="w-screen max-w-xl px-10 pt-2 mb-16 bg-white shadow-md rounded-xl ">
      <h1 class="pb-3 mt-8 font-bold text-center text-gray-500">Vacation Details</h1>
      <div class="field">
        <%= form.label :vacation_at,"Vacation Date",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.date_field :vacation_at %>
      </div>
      
      <div class="field">
        <%= form.label :vacation_type,"Vacation Type",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.select :vacation_type, Vacation.vacation_types_i18n.invert %>
      </div>

      <div class="field">
        <%= form.label :hour,"Hour",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <p>Only change the hour when you are request a non-whole day off</p>
        <%= form.number_field :hour,min:0.5,max:8.0, step: 0.5, value: 8 %>
      </div>
      
      <div class="field">
        <%= form.label :reason,"Reason",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.text_field :reason,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
      </div>

      <div>
        <%= form.label :proof, "Proof",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.file_field :proof %>
      </div>

      <div class="flex justify-center py-6 actions">
        <%= link_to 'Cancel', vacations_path, class: "cancel-btn" %>
        <%= form.submit class: "add-btn" %>
      </div>
    <% end %>
  </div>
</div>