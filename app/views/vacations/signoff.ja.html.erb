<div class="flex items-start justify-center w-full h-screen text-xl bg-gray-200">
  <%= form_with(model: @vacation ,url: signoff_completed_vacation_path, method: 'post') do |form| %>
    <div class="w-screen max-w-xl px-10 mt-10 mb-16 bg-white shadow-md rounded-xl ">
      <h1 class="py-3 mt-8 font-bold text-center text-gray-500">休暇を求めます</h1>
      <div class="py-1 field">
        <strong><%= form.label :vacation_at, "Vacation Date" %></strong>
        <%= form.date_field :vacation_at,readonly: :true %>
      </div>
      
      <div class="py-1 field">
        <strong><%= form.label :vacation_type, "Vacation Type" %></strong>
        <%= form.text_field :vacation_type ,readonly: :true %>
      </div>

      <div class="py-1 field">
        <strong><%= form.label :status, "状態" %></strong>
        <%= form.select :status , Vacation.vacation_statuses %>
      </div>

      <div class="py-1 field">
        <strong><%= form.label :reason, "理由" %></strong>
        <%= form.text_field :reason,readonly: :true %>
      </div>
      
      <div class="py-1 field">
        <strong><%= form.label :proof, "証明" %></strong>
        <%= link_to 'Show proof', @vacation.proof,class: "mb-1 font-semibold text-blue-600 pt-3", target: "_blank" if @vacation.proof.attached? %>
        <%= 'No proof' unless @vacation.proof.attached? %>
      </div>

      <div class="flex justify-center actions">
        <%= form.submit class: "add-btn mb-4 w-1/3" %>
      </div>
    </div>
  <% end %>
</div>