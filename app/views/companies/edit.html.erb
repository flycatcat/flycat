<h1>編輯公司資訊</h1>

<%= form_with(model: @company) do |form| %>
  <% if @company.errors.any?  %>
    <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="field">
    <%= form.label :title, "公司名稱" %>
    <%= current_company.title %>
  </div>

  <div class="field">
    <%= form.label :vat_number, "統一編號" %>
    <%= form.text_field :vat_number %>
  </div>

  <div class="field">
    <%= form.label :person_in_charge, "負責人" %>
    <%= form.text_field :person_in_charge %>
  </div>

  <div class="field">
    <%= form.label :address, "公司地址" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :contact_person, "公司聯絡人" %>
    <%= form.text_field :contact_person %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>


