<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">
  <h1 class="text-center text-2xl sm:text-4xl  py-6"><%= t('編輯公司資訊') %></h1>
  <%= form_with(model: @company, class:'whitespace-nowrap') do |form| %>
    <div class="field">
      <%= form.label :title, t("公司名稱"),class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :title, class:"md:w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :ubn, t("統一編號"),class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :ubn,readonly: :true,class: "md:w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :person_in_charge, t("負責人"),class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :person_in_charge,class: "md:w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :address, t("公司地址"),class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :address,class: "md:w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :contact_person, t("公司聯絡人"),class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :contact_person,class: "md:w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="actions">
      <%= form.submit class:"submit-btn" %>
    </div>
  <% end %>
</div>

