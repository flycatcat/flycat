<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <% if @order.errors.any? %>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">

    <%= form_with(model: @order, url: orders_path, method: 'post') do |form| %>
        <div>
            <%= form.label :username, t("公司名") ,class: "block mb-1 font-semibold text-gray-600 mb-2"%>
            <%= form.text_field :username,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50 mb-2" %>
        </div>
        <div >
            <%= form.label :amount, t("升級金額(永久)") ,class: "block mb-1 font-semibold text-gray-600 mb-2"%>
            <%= form.number_field :amount,value:500,readonly: :true, class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50 mb-2" %>
        </div>
        <div >
            <%= form.label :memo, t("留言") ,class: "block mb-1 font-semibold text-gray-600 mb-2"%>
            <%= form.text_area :memo, rows: 5,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50 mb-2" %>
        </div>
            <%= form.submit t('前往付款'),class: "submit-btn" %>
    <% end %>
  </div>
</div>